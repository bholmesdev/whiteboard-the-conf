---
type Props = {
  userId: string;
};

const { userId } = Astro.props;

const user = await Astro.locals.runtime.env.DB.prepare(
  `SELECT badge_img_url FROM user WHERE id = ?`
)
  .bind(userId)
  .first();

console.log(user?.badge_img_url);
---

{user?.badge_img_url ? <img src={user.badge_img_url} /> : null}
