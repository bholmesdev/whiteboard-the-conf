---
import RSVP from "../components/RSVP.astro";
import Layout from "../layouts/Layout.astro";

const session = await Astro.locals.auth.validate();

if (session) {
  return Astro.redirect(`/invite/${session.user.username}`);
}
---

<Layout title="Whiteboard the conf">
  <div class="container">
    <header>
      <h1>Whiteboard the conf</h1>
    </header>
    <main>
      <p>
        Join us for the <strong>greatest</strong> gathering of whiteboard
        enthusiasts the world over! Whether your a developer, teacher, or just
        dry-erase artist, you'll definitely find a home here ðŸ™Œ
      </p>

      <RSVP />
    </main>
  </div>
</Layout>

<style>
  .container {
    padding-inline: var(--size-2);
    max-width: 80ch;
    margin: auto;
  }

  header {
    padding-block-end: var(--size-4);
  }

  main {
    display: flex;
    flex-direction: column;
    gap: var(--size-4);
    align-items: center;
  }

  :root {
    --orange-hs: 7, 91%;
    --purple-hs: 263, 100%;
    --pink-hs: 331, 96%;
    --green-hs: 116, 86%;
    --orange: hsl(var(--orange-hs), 50%);
    --purple: hsl(var(--purple-hs), 50%);
    --pink: hsl(var(--pink-hs), 45%);
    --green: hsl(var(--green-hs), 34%);
  }
</style>
